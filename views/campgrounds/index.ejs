<% include ../partials/header %>
<style>
  img{
    width:240px;
  }
</style>
<div class="container">
  <header class="jumbotron">
    <div class="container">
    <h1><strong>Welcome To YelpCamp!</strong></h1>
    <p>View our hand-picked pictures of campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
    </p>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%campgrounds.forEach(function(campground){%>
      <div class="col-lg-3 col-md-4 col-sm-6">
              <div class="img-thumbnail">
                  <a href="/campgrounds/<%=campground._id%>"><img style="border-radius:3px 3px 0px 0px;" src="<%=campground.image%>"></a>
                  <div class="caption text-capitalize">
                      <a style="color:#000000; text-decoration:none;" href="/campgrounds/<%=campground._id%>"><h4><%=campground.name %></h4></a>
                  </div>
              </div>
      </div>
    <%});%>
  </div>
</div>
<% include ../partials/footer %>
